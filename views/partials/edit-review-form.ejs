                    <label class="star-box" for=""><input class="star-input" type="radio" name="star" value="5"></label>
                </div>

                <!--  image / video upload -->
                <div class="media-assets">
                    <label for="edit-file-img">
                        <i id="edit-file-img" class="fa fa-file-image-o" aria-hidden="true">Upload an image</i>
                        <input class="img-file-input" type="file" name="photo" value="">
                    </label>
                    <label for="edit-file-video">
                        <i id="edit-file-video" class="fa fa-file-video-o" aria-hidden="true">Upload a video</i>
                        <input type="file" name="video" value="">
                    </label>
                </div>

            </div> <!-- post content container --> 

            <hr class="shadow-hr">

            <div class="bottom-btns">
                <button class="preview-btn" type="button">Preview <i id="preview-eye" class="fa fa-eye" aria-hidden="true"></i></button>
                <button type="submit">UPDATE</button>
                <button class="delete-post-modal-btn" type="button">Delete</button>
                <div class="delete-confirm-modal hidden">
                    <p>Are you positive you want to remove this post?</p>
                    <button class="delete-post-btn" type="button">Yes, delete my post</button>
                    <button class="go-back-btn" type="button">No, back</button>
