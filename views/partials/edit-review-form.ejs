                </label>
                
                <!--  post content -->
                <label class="review-label" for="">
                    <span>Review: </span>
                    <p><textarea id="edit-post-content" name="content" rows="10" cols="60" placeholder="Type your review here" required></textarea></p>
                </label>

                <!--  star ratings -->
                <div class="star-rating-container">
                    <span>Rate It: </span>
                    <label class="star-box" for=""><input class="star-input" type="radio" name="star" value="1" required></label>
                    <label class="star-box" for=""><input class="star-input" type="radio" name="star" value="2"></label>
