

<!-- REVIEW FORM --> 

<section id="review-form-screen" class="hidden">
    <div class="review-form-modal">
        <header class="review-form-banner">
            <h2 class="review-form-title">Write Your Review</h2>
            <button class="close-btn" type="button">Close <i id="review-form-x" class="fa fa-times" aria-hidden="true"></i></button>
        </header>

        <form id="review-form" enctype="multipart/form-data" method="POST" action="/posts">
            <!-- Drone Selector -->
            <div class="select-drone-container">
                    <!--  dropdown options -->
                <label for="dropdown-options">Select a drone make and model
                    <select class="dropdown-options" name="make" required></select>
                </label>
            </div>

            <hr class="shadow-hr">

            <!-- Post text -->
            <div class="post-content-container">
                <label class="post-title-label" for="">
                    Title:
                    <input id="title-input" type="text" name="title" value="" placeholder="Title for review post" required>
                </label>
                
                <!--  post content -->
                <label class="review-label" for="">
                    <span>Review: </span>
                    <p><textarea id="post-content" name="content" rows="10" cols="60" placeholder="Type your review here" required></textarea></p>
                </label>

                <!--  star ratings -->
                <div class="star-rating-container">
                    <label>Rate It: </label>
                    <div class="rating">
                        <span class="star">&#9734;</span><span class="star">&#9734;</span><span class="star">&#9734;</span><span class="star">&#9734;</span><span class="star">&#9734;</span>
                    </div>
                    <div class="rating-alert hidden">
                        <p>Rating required before submitting post</p>
                    </div>
                </div>

                <!--  image / video upload -->
                <div class="media-assets">
                    <label for="file-img">
                        <i id="file-img" class="fa fa-file-image-o" aria-hidden="true">Upload an image</i>
                        <input class="img-file-input" type="file" name="photo" value="" accept=".jpg, .jpeg, .png">
                    </label>
                    <label for="file-video">
                        <i id="file-video" class="fa fa-file-video-o" aria-hidden="true">Upload a video</i>
                        <input class="video-file-input" type="file" name="video" value="">
                    </label>
                </div>

            </div> <!-- post content container --> 

            <hr class="shadow-hr">

            <div class="bottom-btns">
                <button class="preview-btn" type="button">Preview <i id="preview-eye" class="fa fa-eye" aria-hidden="true"></i></button>
                <button type="submit">Post It</button>
            </div>
        </form> <!-- post form --> 

    </div>
</section>

